<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.illuminati_zombies.illuminati_zombies">

    <application
        android:allowBackup="true"
        android:icon="@drawable/illuminatilogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="landscape"
            android:name=".GameActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".SplitscreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".MultiplayerActivity"></activity>
        <activity android:name=".LevelCreationActivity"></activity>
        <activity android:name=".ScoreboardActivity"></activity>
    </application>

</manifest>
